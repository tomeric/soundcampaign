<%
main ||= 'application'
%>
<!-- Google Analytics -->
<% if Settings['analytics'] && Settings['analytics']['tracking_id'] %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    
    ga('create', '<%= Settings.analytics.tracking_id %>', '<%= Settings.canonical_hostname %>');
    ga('send', 'pageview');
    
  </script>
<% end %>

<!-- Include jQuery -->
<%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js',
      data: { 'turbolinks-track' => true } %>
<script>
  window.jQuery || document.write('<%=
    escape_javascript javascript_include_tag(:jquery, data: { 'turbolinks-track' => true })
  %>');
</script>

<!-- Include main javascript -->
<%= javascript_include_tag main,
      data: { 'turbolinks-track' => true } %>
  
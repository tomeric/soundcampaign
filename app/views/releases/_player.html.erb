<%
first_track = tracks.first

if first_track.present?
%>
  <div class="release-player">
    <div class="jplayer"></div>
    <div class="releases faux-table">
      <div class="top">
        <span class="title"><%= release.title %></span>
      </div>
      <div class="player">
        <!--
        <div class="timeline">
          <div class="waveform">
            <%= image_tag("temp/temp_waveform.png", style: "width:100%;height:100%") %>
          </div>
          <div class="loader" style="width:50%"></div>
          <div class="location" style="left:25%"></div>
        </div>
        -->
        <div class="controls">
          <div class="left"></div>
          <div class="playpause"></div>
          <div class="right"></div>
        </div>
        <div class="time">00:00 / <%= first_track.length %> <%= first_track.position %>. <%= first_track.artist %> - <strong><%= first_track.title %></strong></div>
        <!--
        <div class="volume">
        </div>
        -->
      </div>
      <% tracks.each.with_index do |track, index| %>
      <div class="bar player-track">
        <span class="player-track-title"><%= track.position || index + 1 %>. <%= track.artist %> - <strong><%= track.title %></strong></span>
        <%= link_to 'download', track.attachment.url, class: 'download', download: track.attachment_file_name %>
        <div class="star"></div>
      </div>
      <% end %>
      <div class="bar">
        <a class="download-release">Download release as a zipfile</a>
      </div>
      <div class="feedback">
        <span>Your feedback</span>
        <textarea></textarea>
        <button class="btn btn-primary" type="button">Submit feedback</button>
      </div>
    </div>
  </div>
<% end %>

  <div class="controls">
    <div class="left"></div>
    <div class="playpause"></div>
    <div class="right"></div>
  </div>
  <div class="time">
    <span class="current-time">00:00</span> /
    <span class="track-length"><%= duration_to_clock first_track.length %></span>

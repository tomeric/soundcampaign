  <div class="timeline">
    <div class="waveform">
      <%= image_tag("temp/temp_waveform.png", style: "width:100%;height:100%") %>
    </div>
    <div class="loader" style="width:50%"></div>
    <div class="location" style="left:25%"></div>
  </div>

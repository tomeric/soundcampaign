<section class="section" id="releases">
  <%= render 'header', title: 'Your Releases' %>
  <% if @releases.present? %>
    <%= render 'releases', releases: @releases %>
  <% else %>
    <div class="blank-slate">
      <h2 class="blank-slate-title">Let's create your first release!</h2>
      <p class="blank-slate-subtitle"><a href="#">Click here</a> to see a video!</p>
    </div>
  <% end %>
</section>

<%= form_for @label do |f| %>
  <div class="music-label cover-box edit">
    <div class="top">
      <div class="cover-drop"
         <% if @label.persisted? %>
           data-association="label_id=<%= @label.id %>"
         <% end %>
           data-file-attribute="label[cover_id]"
           data-upload-url="<%= covers_path %>">
        <div class="cover-drop-label">
          <p class="cover-info">
            Drag &amp; drop image here
          </p>
          <p class="cover-info">
            230px by 230px works best
          </p>
        </div>
        
        <div class="cover-preview">
          <% if @label.cover %>
            <div class="preview">
              <%= f.hidden_field :cover_id %>
              <%= image_tag @label.cover.url(:thumbnail), class: 'preview-thumbnail' %>
            </div>
          <% end %>
        </div>
      </div>
      <header class="header">
        <span class="title">
          <%= f.text_field :name, placeholder: 'Label name' %>
        </span>
      </header>
      <div class="content ">
        <%= f.text_area :description, rows: 3,
              placeholder: 'A description of your label' %>
      </div>
    </div>
    <div class="music-label-info">
      <div class="music-label-label-box">
        <h4>Label Information</h4>
        <ul>
          <li>
            <div class="input-prepend">
              <label class="add-on" for="label_catid">Catid</label>
              <%= f.text_field :catid, class: 'span2', placeholder: 'Catid' %>
            </div>
          </li>
          <li>
            <div class="input-prepend">
              <label class="add-on" for="label_style">Style</label>
              <%= f.text_field :style, class: 'span2', placeholder: 'Style' %>
            </div>
          </li>
        </ul>
      </div>
      <div class="music-label-contact-box">
        <h4>Contact Information</h4>
        <ul>
          <li>
            <%= f.text_field :contact_name,
                  placeholder: 'Contact name' %>
          </li>
          <li>
            <%= f.text_field :contact_street,
                  placeholder: 'Street & housenumber' %>
          </li>
          <li>
            <%= f.text_field :contact_zipcode_city,
                  placeholder: 'Zipcode & city' %>
          </li>
        </ul>
        <ul>
          <li>
            <%= f.text_field :contact_email,
                  placeholder: 'Email address' %>
          </li>
          <li>
            <%= f.text_field :contact_phone,
                  placeholder: 'Telephone number' %>
          </li>
          <li>
            <%= f.text_field :contact_url,
                  placeholder: 'Website URL' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="music-label-buttons">
    <%= link_to  'Cancel', labels_path,
          class: 'music-label-cancel-link' %>
    <%= f.submit 'Save',
          class: 'music-label-save-button' %>
  </div>
<% end %>
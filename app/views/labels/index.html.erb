<% if @labels.present? %>
  <header class="main-header">
    <h1 class="main-header-title">Your Labels</h1>
    <span class="main-header-options">
      Add a new:
      <%= link_to 'Label', new_label_path %>
    </span>
  </header>
  <%= render @labels %>
<% else %>
  <header class="main-header">
    <h1 class="main-header-title">Welcome <%= current_user.try(:name) %></h1>
    <span class="main-header-options">
      Add a new:
      <%= link_to 'Label', new_label_path %>
    </span>
  </header>
  <div class="main-frame-intro">
    <h2 class="main-frame-title">Hello there! Start by creating a Label!</h2>
    <p class="main-frame-subtitle"><a href="#">Click here</a> to see a video!</p>
  </div>
<% end %>
